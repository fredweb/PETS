<section class="content-header">
    <h1>Contas à receber</h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <table 
                   id="cobrancaTable"
                   data-xn-key="DocNum"
                   data-xn-columns="DocType,DocNum,DueDateFmt,Days,CardCode,CardName,CardFName,DocTotalFmt,Phone,City,State,SlpName,DocStatus,Comments"
                   data-xn-orderable="DocType,Days,CardCode,CardName,SlpName,City,State"
                   data-xn-show-select="false"
                   data-xn-url="@Url.Action("List60", "Cobranca", new { area = "XNuvem.Vendas" })"
                   class="table table-bordered table-hover nowrap"
                   style="width: 100%;">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Nº doc</th>
                        <th>Vencimento</th>
                        <th>Atraso</th>
                        <th>Cliente</th>
                        <th>Nome do cliente</th>
                        <th>Nome fantasia</th>                        
                        <th>Valor</th>
                        <th>Tel</th>
                        <th>Cidade</th>
                        <th>Estado</th>
                        <th>Nome vendedor</th>
                        <th>Status</th>
                        <th>Obs/Info Chq (SAP)</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

<div id="atividadeModal" class="modal modal-info" style="display: none;" data-xn-DocType="" data-xn-DocNum="" data-xn-CardCode="">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><i class="icon fa fa-info"></i>&nbsp;&nbsp;Lista de atividades&nbsp;</h4>
                <span id="modalDocument"></span>
            </div>
            <div class="modal-body">
                <div id="ModalContent" class="modal-xn-content" data-xn-url="@Url.Action("AtividadeList", "Cobranca", new { area = "XNuvem.Vendas" })">
                    <p>Nenhum comentário neste documento.</p>
                </div>
                <div class="form-group">
                    <strong>Novo comentário</strong>
                    <textarea id="ModalComentario" class="form-control" rows="3"></textarea>
                </div>
                <div class="clearfix">
                    <button id="ModalSave" class="btn btn-success pull-left" type="button" data-xn-url="@Url.Action("CreateAtividade", "Cobranca", new { area = "XNuvem.Vendas" })">Salvar</button>
                </div>
            </div>
            <div class="modal-footer">
                <button id="ModalClose" class="btn btn-default pull-left" type="button">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section HeaderContent {
    @Styles.Render("~/css/dataTable")
<style type="text/css">
    .modal-xn-content {
        max-height: 200px !important;
    }
</style>
}

@section Scripts {
    @Scripts.Render("~/js/dataTable")
    <script src="~/Modules/XNuvem.Vendas/Scripts/xnuvem-cobranca-list-1.2.js"></script>
}



