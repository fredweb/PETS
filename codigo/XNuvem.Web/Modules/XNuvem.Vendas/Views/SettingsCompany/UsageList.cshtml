<section class="content-header">
    <h1>Lista de utilizações</h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <table data-xn-dt
                   data-xn-key="AbsEntry"
                   data-xn-columns="Name,UsageText"
                   data-xn-orderable="Name,UsageText"
                   data-xn-show-select="true"
                   data-xn-url="@Url.Action("UsageList", "SettingsCompany", new { area = "XNuvem.Vendas" })"
                   data-xn-link="Name:@Url.Action("Usage", "SettingsCompany", new { area = "XNuvem.Vendas" })/{AbsEntry}"
                   data-xn-url-add="@Url.Action("Usage", "SettingsCompany", new { area = "XNuvem.Vendas" })"
                   data-xn-url-delete="@Url.Action("UsageDelete", "SettingsCompany", new { area = "XNuvem.Vendas" })"
                   class="table table-bordered table-hover nowrap"
                   style="width: 100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Utilização SAP</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

@section HeaderContent {
    @Styles.Render("~/css/dataTable")
}

@section PreScripts {
    @Scripts.Render("~/js/dataTable")
}



