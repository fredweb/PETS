<section class="content-header">
    <h1>Lista de clientes</h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <table data-xn-dt
                   data-xn-key="CardCode"
                   data-xn-columns="CardCode,CardName,City,State,CpfCnpj,FullPhone"
                   data-xn-orderable="CardCode,CardName,City,State"
                   data-xn-show-select="false"
                   data-xn-url="@Url.Action("List", "Customer", new { area = "XNuvem.Vendas" })"
                   data-xn-link="CardCode:@Url.Action("Detail", "Customer", new { area = "XNuvem.Vendas" })/{CardCode}"
                   class="table table-bordered table-hover nowrap"
                   style="width: 100%;">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Nome do cliente</th>
                        <th>Cidade</th>
                        <th>Estado</th>
                        <th>CPF/CNPJ</th>
                        <th>Telefone</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

@section HeaderContent {
    @Styles.Render("~/css/dataTable")
}

@section Scripts {
    @Scripts.Render("~/js/dataTable")
}



